{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "plugins": [
        "prettier"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "error",
            4
        ],
        "quotes": [
            2,
            "single",
            "avoid-escape"
        ],
        "max-len": [
            "error",
            {
                "code": 100
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-underscore-dangle": "off",
        "import/extensions": "off"
    }
}